{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}